<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Project2.Windows.OnlineLibraryDistSysAddWin"
        Title="StudentAddWin">
    <Grid>
        <StackPanel Orientation="Vertical" Width="750" Background="DarkGreen">
            
            <TextBlock VerticalAlignment="Center" Background="ForestGreen" Margin="0 10 0 0">Введите ID</TextBlock>
            <TextBox Name="IDTextBox" Background="DarkGray" Margin="0 0 0 10"></TextBox>
            
            <TextBlock VerticalAlignment="Center" Background="ForestGreen" Margin="0 10 0 0">Выберите библиотеку</TextBlock>
            <ComboBox Name="OnlineLibrariesComboBox" HorizontalAlignment="Center" Margin="0 5 0 5"></ComboBox>
            
            <TextBlock VerticalAlignment="Center" Background="ForestGreen" Margin="0 10 0 0">Выберите систему</TextBlock>
            <ComboBox Name="DistantSystemsComboBox" HorizontalAlignment="Center" Margin="0 5 0 5"></ComboBox>
            
            <Button Click="AddButton" HorizontalAlignment="Center" Margin="0 5 0 5">Сохранить и добавить</Button>
        </StackPanel>
    </Grid>
</Window>